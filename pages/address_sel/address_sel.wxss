/* pages/address_sel/address_sel.wxss */
.list .item{
  display: flex;
  margin: 0 18px;
  border-bottom: 1px solid #dedede;
  padding: 15px 0;
  align-items: center;
  height: 98px;
}

.item .left{
  flex: 1 0 75%;
  font-size: 14px;
}
.item .del,.edit,.choice{
  flex: 1 0 10%;
  text-align: center;
}

.item .del image{
  width: 20px;
  height: 20px;
}

.item .edit image{
  width: 20px;
  height: 20px;
}
.item .choice image{
  width: 20px;
  height: 20px;
}

.choice_btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.choice_btn .add_btn{
  flex: 3;
  background-color: #ff5f19;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid white;
}
.choice_btn .submit_btn{
  flex: 3;
  background-color: #ff5f19;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid white;
}